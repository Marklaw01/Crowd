<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:id="@+id/companyNamelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailtextbox"
                android:ems="10"

                android:inputType="textCapWords"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"

                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/companyUrllbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Link to Company's website"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/companyUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:ems="10"

                android:inputType="textUri"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"


                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/descriptionlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/multiline_textview"
                android:layout_gravity="left|top"
                android:gravity="left|top"

                android:inputType="textMultiLine|textCapSentences"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/keywordlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keyword"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"

                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"


                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/qualificationlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qualification"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/skillslbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/industryfocuslbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/industryfocus"
                android:textStyle="bold"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/industryfocus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:ems="10"

                android:inputType="textImeMultiLine|textCapSentences"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/addcontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.5"
                    android:background="@drawable/blue_button"
                    android:text="@string/addcontributor"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!--<Button
                    android:id="@+id/ratecontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"

                    android:background="@color/colorPrimary"
                    android:text="@string/ratecontributor"
                    android:textColor="@color/white" />-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>