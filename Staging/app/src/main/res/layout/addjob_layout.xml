<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/app_backgroundColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">



            <Spinner
                android:id="@+id/et_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <EditText
                android:id="@+id/et_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Industry"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/countrylbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5sp"
                        android:singleLine="true"
                        android:text="Country"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/mediumTextStyle"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_field"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/mediumTextStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/citylbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5sp"
                        android:singleLine="true"
                        android:text="State"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/mediumTextStyle"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_field"
                        android:singleLine="true"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/mediumTextStyle" />
                </LinearLayout>
            </LinearLayout>


            <EditText
                android:id="@+id/et_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Job Title"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Role"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobtypelbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10sp"
                    android:singleLine="true"
                    android:text="Job Type"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle"
                    android:textStyle="normal" />

                <Spinner
                    android:id="@+id/et_jobtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/spinner_field"
                    android:singleLine="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_targetResource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Minimum Work NPS"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Location"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Travel"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/calender_input"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Start Date"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/calender_input"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="End Date"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Skills"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="Requirements"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_jobPostingKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Job Posting Keywords"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginTop="10sp"
                android:background="@drawable/multiline_textview"
                android:ems="10"
                android:gravity="left|top"
                android:hint="Summary"
                android:inputType="textMultiLine|textCapSentences"
                android:padding="10sp"
                android:singleLine="false"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Upload"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/plus"
                        android:gravity="center" />

                    <!--<ImageView
                        android:id="@+id/btn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:background="@drawable/minus"
                        android:gravity="center" />-->
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_uploadFileType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@drawable/spinner_field"
                    android:entries="@array/uploadFileType"
                    android:prompt="@string/chooseFileType"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/smallTextStyle" />

                <TextView
                    android:id="@+id/btn_browse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15sp"
                    android:layout_weight="0.5"
                    android:background="@drawable/gray_button"
                    android:gravity="center"
                    android:text="Browse"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/smallTextStyle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_fileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_fileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="@dimen/smallTextStyle"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/tv_deleteFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/delete_file" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">


            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>-->

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"

                android:background="@drawable/blue_button"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/mediumTextStyle" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>