<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical"
    android:background="@color/app_backgroundColor"
    android:orientation="horizontal">

    <com.crowdbootstrap.helper.CircleImageView
        android:id="@+id/image_user"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_centerInParent="true"
        android:layout_gravity="left|center"
        android:layout_margin="5sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_user_login"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:text="Neel Karn"
            android:layout_marginLeft="10sp"
            android:textSize="@dimen/mediumTextStyle"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_user_status"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:text="Neel Karn"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textSize="@dimen/smallTextStyle"
            android:textColor="@color/textColor"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>