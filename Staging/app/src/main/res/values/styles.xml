<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/drawerListSelectorColor</item>
        <!--<item name="navigationBarColor">@android:color/transparent</item>-->
        <item name="buttonStyle">@style/AppTheme.Widget.Button</item>
        <item name="checkboxStyle">@style/CheckBoxcheckbox</item>
        <item name="radioButtonStyle">@style/RadioButtonAppTheme</item>
        <item name="checkedTextViewStyle">@style/CheckBoxTextView</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="alertDialogStyle">@style/AlertDialogCustom</item>
        <item name="ratingBarStyle">@style/RatingBarSmallAppTheme</item>

    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="LoginPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_backgroundColor</item>
        <item name="colorPrimaryDark">@color/app_backgroundColor</item>
        <item name="colorAccent">@color/drawerListSelectorColor</item>
        <item name="buttonStyle">@style/AppTheme.Widget.Button</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>


    <style name="AppTheme.SmallTextViewStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.MediumTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.LargeTextViewStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox_textview</item>
        <item name="android:checkboxStyle">@style/CheckBoxcheckbox</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackground">@color/app_backgroundColor</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--<style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:listChoiceIndicatorMultiple">@drawable/checkbox_textview</item>
        <item name="android:checkboxStyle">@style/CheckBoxTextView</item>
        <item name="android:background">@color/app_backgroundColor</item>

    </style>-->


</resources>
