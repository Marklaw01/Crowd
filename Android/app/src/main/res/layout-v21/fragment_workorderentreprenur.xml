    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namelbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.25"
            android:text="@string/uploadername"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mediumTextStyle" />


        <TextView
            android:id="@+id/datelbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.25"
            android:text="@string/date"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mediumTextStyle" />

        <TextView
            android:id="@+id/workRoadmap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.25"
            android:text="Road map"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mediumTextStyle" />

        <TextView
            android:id="@+id/workunitlbl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.25"
            android:text="@string/workUnit"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/mediumTextStyle" />

    </LinearLayout>
    <com.crowdbootstrap.swipelistview_withoutscrollview.SwipeMenuListView
        android:id="@+id/listViewcontractors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:cacheColorHint="#FFFFFFFF"
        android:dividerHeight="2dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/downloaddoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_button"
            android:padding="12dp"
            android:text="@string/downloadWorkorder"
            android:textColor="@color/white"
            android:textSize="@dimen/mediumTextStyle" />

    </LinearLayout>
</LinearLayout>