<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="15sp">

    <RelativeLayout
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:background="@drawable/image_circle">

        <com.crowdbootstrap.helper.CircleImageView
            android:id="@+id/profileimage"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
             />

    </RelativeLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:text="Mark Lawrence"
        android:textColor="@color/textColor"
        android:textSize="@dimen/largeTextStyle" />


    <TextView
        android:id="@+id/referenceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="@color/darkGreen"
        android:padding="5dp"
        android:text="Refer a Friend?"
        android:textColor="@color/white"
        android:textSize="@dimen/mediumTextStyle" />
</LinearLayout>