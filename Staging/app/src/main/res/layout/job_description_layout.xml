<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_postedBy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:text="Posted By: "
                    android:padding="5dp"
                    android:inputType="none"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"
                    android:textColor="@color/white"

                    android:textSize="@dimen/mediumTextStyle">

                </EditText>


                <TextView
                    android:id="@+id/cbx_Follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="@color/darkGreen"
                    android:button="@null"

                    android:gravity="center"
                    android:text="@string/follow"
                    android:textColor="@color/white" />
            </LinearLayout>


            <EditText
                android:id="@+id/et_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Company Name"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Industry"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <EditText
                android:id="@+id/et_jobtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Target Market"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Role"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_jobType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
