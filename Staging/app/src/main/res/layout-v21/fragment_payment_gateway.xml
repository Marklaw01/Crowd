<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical"
    android:background="@color/app_backgroundColor"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15sp"
        android:gravity="left"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
        android:text="@string/chooseYourServiceProviders"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/largeTextStyle" />

    <ListView
        android:id="@+id/list_compaigns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10sp"
        android:layout_weight="0.8"
        android:cacheColorHint="#FFFFFFFF"
        android:fadingEdge="none"
        android:divider="@android:drawable/divider_horizontal_dark"
        android:layout_marginBottom="10sp"
        android:fastScrollEnabled="true"
        android:scrollbars="vertical"
        android:scrollingCache="false" />

    <Button
        android:id="@+id/btn_conform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/conform"
        android:textStyle="bold"
        android:background="@drawable/blue_button"
        android:gravity="center" />
</LinearLayout>