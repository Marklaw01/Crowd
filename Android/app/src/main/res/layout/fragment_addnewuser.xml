<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent_layout"
    android:background="@color/app_backgroundColor"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10sp">

            <Button
                android:id="@+id/btn_photographBusinessCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/blue_button"
                android:text="Photograph Business Card"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/businesscard_imageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10sp"
                android:scaleType="fitXY"
                android:src="@drawable/forum_dummy_image" />

            <Button
                android:id="@+id/btn_readBusinessCardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/blue_button"
                android:text="Read Business Card"
                android:textColor="@color/white"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/userNamelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:inputType="textCapWords"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <TextView
                android:id="@+id/userPhonelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:text="Phone Number"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <TextView
                android:id="@+id/userEmaillbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:text="Email"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/chooseStartuplbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7sp"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:text="Connection Type"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_connectionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_field"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/mediumTextStyle" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:text="Add Note"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_usersNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/multiline_textview"
                android:cursorVisible="false"
                android:gravity="top"
                android:inputType="none"
                android:maxLines="10"
                android:padding="10sp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle">

            </EditText>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">


            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/green_color_button"
                android:text="Save"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>