<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/textColor"
        android:textSize="@dimen/mediumTextStyle" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/multiline_textview"
        android:gravity="left|top"
        android:maxLines="5"
        android:padding="@dimen/padding"

        android:textColor="@color/textColor"
        android:textSize="@dimen/mediumTextStyle">

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contributornametext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/timestamp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/smallTextStyle" />

        <EditText
            android:id="@+id/et_timeStamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/calender_input"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:singleLine="true"

            android:textColor="@color/textColor"
            android:textSize="@dimen/mediumTextStyle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/deliverable"
            android:textColor="@color/textColor"
            android:textSize="@dimen/smallTextStyle" />

        <Spinner
            android:id="@+id/et_deliverable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/emailtextbox"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/mediumTextStyle" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/rating"
            android:textColor="@color/textColor"
            android:textSize="@dimen/smallTextStyle" />

        <RatingBar
            android:id="@+id/rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="10"
            android:padding="1dp"
            android:progressTint="@color/orange"
            android:progress="3"
            android:stepSize="0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10sp"
            android:layout_weight="0.5"
            android:background="@drawable/blue_button"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10sp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:text="@string/done"
            android:background="@drawable/green_color_button"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>