<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:id="@+id/layoutFundPostedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_postedBy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="@color/colorPrimary"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="5dp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"
                    android:text="Posted By: "
                    android:textColor="@color/white"
                    android:textSize="@dimen/mediumTextStyle">

                </EditText>


                <TextView
                    android:id="@+id/cbx_Like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="@color/darkGreen"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/like"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smallTextStyle" />

                <TextView
                    android:id="@+id/cbx_Follow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:background="@color/darkGreen"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smallTextStyle" />
            </LinearLayout>
            <TextView
                android:id="@+id/namelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/funds_title"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_fundTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/funds_title"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />


