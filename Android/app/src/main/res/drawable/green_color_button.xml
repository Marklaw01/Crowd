<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/lightGreen" android:startColor="@color/lightGreen" />
            <!--<stroke android:width="3dp" android:color="@color/lightGray" />-->
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/lightGreen" android:startColor="@color/lightGreen" />
            <!--<stroke android:width="3dp" android:color="@color/darkGrey" />-->
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/darkGreen" android:startColor="@color/darkGreen" />
            <!--<stroke android:width="3dp" android:color="@color/darkRed" />-->
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>