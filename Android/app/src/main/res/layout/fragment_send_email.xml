<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="To"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />

                <EditText
                    android:id="@+id/et_recipient_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/emailtextbox"

                    android:ems="10"
                    android:inputType="none"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"

                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="CC"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />

                <EditText
                    android:id="@+id/et_recipient_cc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/emailtextbox"

                    android:ems="10"
                    android:inputType="textCapWords"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"

                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="BCC"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />

                <EditText
                    android:id="@+id/et_recipient_bcc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/emailtextbox"

                    android:ems="10"
                    android:inputType="textCapWords"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"

                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />

                <EditText
                    android:id="@+id/et_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/emailtextbox"

                    android:ems="10"
                    android:inputType="textCapWords"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:singleLine="true"

                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />


            </LinearLayout>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/multiline_textview"
                android:imeActionLabel="Send"
                android:imeOptions="actionGo"
                android:textSize="@dimen/mediumTextStyle" />

            <LinearLayout
                android:id="@+id/fileAttachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachPin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/attach_pin" />

                <TextView
                    android:id="@+id/tv_fileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:text="Attach File"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/smallTextStyle"
                    android:textStyle="bold" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20sp"
                android:background="@drawable/blue_button"
                android:text="Send"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>