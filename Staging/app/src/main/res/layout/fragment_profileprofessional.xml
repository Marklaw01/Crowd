<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/companyNamelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <Spinner
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_field"

                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle">

                <requestFocus />
            </Spinner>
            <TextView
                android:id="@+id/keywordlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keyword"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:inputType="none"

                android:paddingLeft="10sp"

                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"


                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/qualificationlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qualification"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/certificationlbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/certification"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/certification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"


                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/skillslbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"

                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"

                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/industryfocuslbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/industryfocus"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/industryfocus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/emailtextbox"
                android:ems="10"

                android:inputType="textImeMultiLine|textCapSentences"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/preferedstartuplbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prefered Startup Stage"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/preferedstartup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:cursorVisible="false"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"/>

            <TextView
                android:id="@+id/contributortypelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contractor Type"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <Spinner
                android:id="@+id/contributortype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/spinner_field"

                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.33"
                    android:text="Accredited Investor"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight="0.33"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_AccreditedInvestor_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:gravity="left|center"
                        android:paddingLeft="10sp"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/rb_AccreditedInvestor_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="0.5"
                        android:paddingLeft="10sp"
                        android:text="No" />
                </RadioGroup>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_IndependentContractorRequierement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:text="*What is an Accredited Investor?"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/smallTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/addcontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.5"
                    android:background="@drawable/blue_button"
                    android:text="@string/addcontributor"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!--<Button
                    android:id="@+id/ratecontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"

                    android:background="@color/colorPrimary"
                    android:text="@string/ratecontributor"
                    android:textColor="@color/white" />-->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>