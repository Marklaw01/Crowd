<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Home"

                        android:gravity="center"
                        android:textSize="11dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/white"
                        android:id="@+id/homeTab"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="News"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/white"
                        android:id="@+id/newsTab"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:text="Alert"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/white"
                        android:id="@+id/alertTab"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:text="Networking Option"
                        android:layout_marginLeft="2dp"
                        android:textSize="8dp"
                        android:gravity="center"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/white"
                        android:id="@+id/networkingTab"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/crowdtext" />


                    <TextView
                        android:id="@+id/welcomeTextfistLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="8sp"
                        android:text="is a patent pending startup"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/smallTextStyle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/welcomeTextbelowLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:text="accelerator App for the iPhone and Android. Entrepreneurs can register their startup and gain access to the Lean Startup RoadmapÂ®, which is a sequence of best practices to launch a startup. Entrepreneurs also get access to a network of experts who help them complete their startup tasks faster and with higher quality. In addition, organizations can recruit experts whose job performance is rated and validated by the entrepreneurs. Also, organizations can extend their supplier diversity programs to the startups and to small businesses or even sponsor their own startup accelerator that funds startups in their industry."
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/smallTextStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/imageViewEntrepreneur"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="5"
                            android:adjustViewBounds="true"
                            android:src="@drawable/gettingstartedblueentre" />

                        <ImageView
                            android:id="@+id/imageViewExpert"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:layout_margin="2dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/gettingstartedblueexpert" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/imageViewRecruiter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:adjustViewBounds="true"
                            android:layout_margin="2dp"
                            android:src="@drawable/gettingstartedbluerecruit" />

                        <ImageView
                            android:id="@+id/imageViewSponsor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:adjustViewBounds="true"
                            android:layout_margin="2dp"
                            android:src="@drawable/gettingstartedbluesponsor" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/imageViewHomePage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:adjustViewBounds="true"
                            android:layout_margin="2dp"
                            android:src="@drawable/gettingstartedbluehomepage" />

                        <ImageView
                            android:id="@+id/imageViewGettingStarted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="5"
                            android:adjustViewBounds="true"
                            android:src="@drawable/gettingstartedbluevideo" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>