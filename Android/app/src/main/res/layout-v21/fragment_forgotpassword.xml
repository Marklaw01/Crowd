<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50sp"
                android:src="@drawable/logo" />

            <com.crowdbootstrapapp.helper.CustomEditTextView
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext_bg_selector"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="35sp"
                android:paddingRight="5sp"
                android:singleLine="true"

                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/mediumTextStyle">

                <requestFocus />
            </com.crowdbootstrapapp.helper.CustomEditTextView>

            <!--<Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/spinner_field"
                android:prompt="@string/chooseSecurityQuestion"
                android:spinnerMode="dropdown"
                android:visibility="gone" />-->
            <com.crowdbootstrapapp.helper.CustomEditTextView
                android:id="@+id/et_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_bg_selector"
                android:cursorVisible="false"

                android:ems="10"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:singleLine="false"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:visibility="gone" />


            <com.crowdbootstrapapp.helper.CustomEditTextView
                android:id="@+id/et_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/edittext_bg_selector"
                android:ems="10"
                android:hint="Answer"
                android:inputType="textCapSentences"
                android:paddingLeft="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_resetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:background="@drawable/blue_button"
                android:text="@string/resetPassword"

                android:textColor="@color/white" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>