<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chat_message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:gravity="right"

    tools:ignore="RtlHardcoded">

    <ProgressBar
        android:id="@+id/progress_message_attachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/layout_message_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:paddingRight="15sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_message_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/smallTextStyle"
                tools:text="User 2" />

            <TextView
                android:id="@+id/text_image_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_message_author"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle"
                tools:text="Test messagesadf sadf sdf sadf asdf asdf asdf fsdf sadf sadf sadf sdf sadf sadfsadfsadfasdf safsadf sadf sadf sadf dsf sdf sadf sadf sdf" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_message_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/smallTextStyle"
            tools:text="10:50" />
    </LinearLayout>


