<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/biolbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bio"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:background="@drawable/multiline_textview"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="5"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="false"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/namelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:inputType="textCapWords"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/emaillbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/et_doblbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/calender_input"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="15sp" />
            <TextView
                android:id="@+id/et_phonelbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="16"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />

            <TextView
                android:id="@+id/countrylbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_field"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />
            <TextView
                android:id="@+id/citylbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <Spinner
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_field"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />


            <!--<Spinner
                android:id="@+id/securityquestion"
                style="?android:attr/spinnerItemStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/spinner_field"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:prompt="@string/securityquestion"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />-->


            <!--<EditText
                android:id="@+id/et_myinterests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:ems="10"
                android:hint="My Interests"
                android:inputType="textEmailAddress"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/addcontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:background="@drawable/blue_button"
                    android:text="@string/addcontributor"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!--<Button
                    android:id="@+id/ratecontributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="0.5"
                    android:background="@drawable/btn_login"
                    android:text="@string/ratecontributor" />
            -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>