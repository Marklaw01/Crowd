                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Job Type"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <EditText
                android:id="@+id/et_minworkNPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Minimum Work NPS"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Location"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_citycountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="City, Country"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Travel"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Start Date"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="End Date"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Skills"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Requirements"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />

            <EditText
                android:id="@+id/et_jobPostingKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@drawable/emailtextbox"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Job Posting Keywords"
                android:inputType="none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"

                android:textSize="@dimen/mediumTextStyle" />


            <LinearLayout
                android:id="@+id/btn_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/lightGray"
                android:orientation="horizontal"
                android:paddingBottom="5sp"
                android:paddingLeft="@dimen/padding"
                android:paddingTop="5sp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:text="Summary"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/viewsummaryArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/arrow_downward"
                    android:gravity="right|center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/expandable_Summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/multiline_textview"
                    android:cursorVisible="false"

                    android:focusable="false"
                    android:gravity="top"
                    android:inputType="none"
                    android:padding="10sp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/mediumTextStyle">

                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/roadmapGraphiclayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/roadmapGraphic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@color/lightGray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5sp"
                    android:paddingLeft="@dimen/padding"
                    android:paddingTop="5sp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:gravity="left|center_vertical"
                        android:text="Company Image"
                        android:textColor="@color/textColor" />

                    <ImageView
                        android:id="@+id/viewroadmapGraphicArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:background="@drawable/arrow_downward"
                        android:gravity="right|center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/roadmapGraphicexpandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_roadmap"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:scaleType="centerInside"
                        android:src="@drawable/forum_dummy_image" />

                    <!--<Button
                        android:id="@+id/btn_editroadmap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/darkGreen"
                        android:text="@string/uploadRoadmapGraphic"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mediumTextStyle" />-->


                    <!--<ListView
                        android:id="@+id/list_startups"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:cacheColorHint="#FFFFFFFF"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:fadingEdge="none"
                        android:fastScrollEnabled="true"
                        android:paddingLeft="@dimen/padding"
                        android:scrollbars="vertical"
                        android:scrollingCache="false" />-->
                    <!--<Button
                        android:id="@+id/btn_editroadmap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/darkGreen"
                        android:text="@string/editroadmap"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/mediumTextStyle" />
-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_viewDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/lightGray"
                android:orientation="horizontal"
                android:paddingBottom="5sp"
                android:paddingLeft="@dimen/padding"
                android:paddingTop="5sp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:text="@string/viewDocument"
                    android:textColor="@color/textColor" />

                <ImageView
                    android:id="@+id/viewDocumentArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/arrow_downward"
                    android:gravity="right|center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/expandable_viewDocument"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_docs"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"

                    android:cacheColorHint="#FFFFFFFF"
                    android:divider="@null"
                    android:dividerHeight="@null"
                    android:fadingEdge="none"
                    android:fastScrollEnabled="true"
                    android:paddingLeft="@dimen/padding"

                    android:scrollbars="vertical"
                    android:scrollingCache="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_playAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/lightGray"
                android:orientation="horizontal"
                android:paddingBottom="5sp"
                android:paddingLeft="@dimen/padding"
                android:paddingTop="5sp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="left|center"
                    android:text="@string/playAudio"
                    android:textColor="@color/textColor" />

