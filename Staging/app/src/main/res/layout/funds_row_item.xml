<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_backgroundColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding"
    android:paddingTop="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fund_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fundTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Fund Title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/mediumTextStyle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fundDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="5dp"
                android:text="Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title Fund Title "
                android:textColor="@color/black"
                android:textSize="@dimen/smallTextStyle" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_postedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="3sp"
        android:paddingTop="3sp"
        android:text="Posted on:- Dec 22, 2016"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray" />

    <LinearLayout
        android:id="@+id/layoutLikeDeslikeButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/like" />

        <TextView
            android:id="@+id/tv_Like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.33"
            android:ellipsize="end"
            android:gravity="left|center"
            android:text="445 Likes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/smallTextStyle"
            android:textStyle="normal" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@color/lightGray" />

        <ImageView
            android:id="@+id/dislike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/dislike" />

        <TextView
            android:id="@+id/tv_dislike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.33"
            android:ellipsize="end"
            android:gravity="left|center"
            android:text="445 Deslikes"
            android:textColor="@color/black"
            android:textSize="@dimen/smallTextStyle"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_archive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/green_color_button"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/archive"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_deactivate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/orange_button"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/deactivate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/red_button"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/delete"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal"  />

    </LinearLayout>


</LinearLayout>