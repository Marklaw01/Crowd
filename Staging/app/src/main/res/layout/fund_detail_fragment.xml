                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_investmentEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/calender_input"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/investment_end_date"
                android:inputType="none|textNoSuggestions"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/textColor"

                android:textSize="15sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/funds_closed_date"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_fundsClosedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/calender_input"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/funds_closed_date"
                android:inputType="none|textNoSuggestions"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/textColor"

                android:textSize="15sp" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/keyword"
                android:paddingRight="10sp"
                android:layout_marginTop="10sp"
                android:singleLine="true"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/mediumTextStyle" />
            <EditText
                android:id="@+id/et_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:background="@drawable/emailtextbox"

                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:hint="@string/keyword"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/mediumTextStyle" />

            <ImageView
                android:id="@+id/image_roadmap"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="10sp"
                android:scaleType="centerInside"
                android:src="@drawable/forum_dummy_image" />
